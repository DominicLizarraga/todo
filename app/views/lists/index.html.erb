
<h1>My To-Do List</h1>


<div class="d-flex justify-content-center m-3">
  <div class="card" style="width: 18rem;">
    <img src="data:image/png;base64," class="card-img-top" alt="...">
      <div class="card-body">
        <center>
          <%= render 'form_index' %>
        </center>
      </div>
  </div>
</div>
<table class="table table-bordered">
  <thead>
    <tr>

    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>

        <tr class="table-secondary">
          <td class="striker"><%= link_to list.description, edit_list_path(list) %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>

      <% else %>

        <tr>
          <td><%= link_to list.description, edit_list_path(list) %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>
